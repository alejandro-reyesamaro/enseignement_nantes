fils(X,Y) :-
  pere(Y,X),
  sexe(X,m).
fils(X,Y) :-
  mere(Y,X),
  sexe(X,m).

fille(X,Y) :-
  pere(Y,X),
  sexe(X,f).
fille(X,Y) :-
  mere(Y,X),
  sexe(X,f).

parent_de(X,Y) :-
  pere(X,Y);
  mere(X,Y).

ancetre_de(X,Y) :-
  parent_de(X,Y).
ancetre_de(X,Y) :-
  parent_de(X,Z),
  ancetre_de(Z,Y).

frere_de(X,Y) :-
  parent_de(Z,X),
  parent_de(V,Y),
  (couple(Z,V);
   couple(V,Z)),
  sexe(X,m).

sexe(marie, f).
